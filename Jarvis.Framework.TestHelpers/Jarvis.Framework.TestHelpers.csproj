    <PackageReference Include="NStore.Core" Version="0.10.0" />
    <PackageReference Include="NStore.Domain" Version="0.10.0" />
    <PackageReference Include="NStore.Persistence.Mongo" Version="0.10.0" />
    <PackageReference Include="NUnit" Version="3.12.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Jarvis.Framework.Kernel\Jarvis.Framework.Kernel.csproj" />
    <ProjectReference Include="..\Jarvis.Framework.Shared\Jarvis.Framework.Shared.csproj" />
  </ItemGroup>

